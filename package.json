{
  "name": "devodoo",
  "displayName": "extend_odoo",
  "description": "help odoo dev",
  "version": "0.0.1",
  "publisher": "DarkDev",
  "engines": {
    "vscode": "^1.91.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [

      {
        "command": "devodoo.createOdooModule",
        "title": "Crear Módulo"
      },
      {
        "command": "devodoo.createBaseModel",
        "title": "Crear Modelo Base"
      },
      {
        "command": "devodoo.createAbstractModel",
        "title": "Crear Modelo Abstracto"
      },
      {
        "command": "devodoo.createTransientModel",
        "title": "Crear Modelo Transitorio"
      },
      {
        "command": "devodoo.createView",
        "title": "Crear Vista"
      },
      {
        "command": "devodoo.createTemplate",
        "title": "Crear Plantilla"
      },
      {
        "command": "devodoo.toggleOdooProject",
        "title": "Toggle Odoo Project"
      },
      {
        "command": "devodoo.showMenu",
        "title": "Show Odoo Menu"
      },
      {
        "command": "devodoo.runOdoo",
        "title": "Run Odoo"
      },
      {
        "command": "devodoo.updateModules",
        "title": "Update Odoo Modules"
      },
      {
        "command": "devodoo.installModules",
        "title": "Update Odoo Modules"
      },
      {
        "command": "devodoo.debugOdoo",
        "title": "Debug Odoo"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "submenu": "devodoo.odooSubmenu",
          "group": "navigation",
          "when": "explorerResourceIsFolder"
        }
      ],
      "devodoo.odooSubmenu": [
        {
          "command": "devodoo.createOdooModule",
          "group": "1_modulos",
          "when": "explorerResourceIsFolder"
        },
        {
          "command": "devodoo.createBaseModel",
          "group": "2_modelos",
          "when": "explorerResourceIsFolder"
        },
        {
          "command": "devodoo.createAbstractModel",
          "group": "2_modelos",
          "when": "explorerResourceIsFolder"
        },
        {
          "command": "devodoo.createTransientModel",
          "group": "2_modelos",
          "when": "explorerResourceIsFolder"
        },
        {
          "command": "devodoo.createView",
          "group": "3_vistas",
          "when": "explorerResourceIsFolder"
        },
        {
          "command": "devodoo.createTemplate",
          "group": "4_plantillas",
          "when": "explorerResourceIsFolder"
        }
      ]
    },
    "submenus": [
      {
        "label": "Odoo",
        "id": "devodoo.odooSubmenu"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Odoo Configuration",
      "properties": {
        "odoo.odooBinPath": {
          "type": "string",
          "default": "",
          "description": "Ruta del archivo odoo-bin"
        },
        "odoo.pythonPath": {
          "type": "string",
          "default": "",
          "description": "Ruta del ejecutable de Python"
        },
        "odoo.configPath": {
          "type": "string",
          "default": "",
          "description": "Ruta del archivo de configuración odoo.config"
        }
      }
    },
    "keybindings": [
      {
        "command": "devodoo.handleF5",
        "key": "F5",
        "when": "editorTextFocus"
      },
      {
        "command": "devodoo.updateModules",
        "key": "ctrl+shift+u",
        "when": "editorTextFocus"
      },
      {
        "command": "devodoo.installModules",
        "key": "ctrl+shift+i",
        "when": "editorTextFocus"
      },
      {
        "command": "devodoo.debugOdoo",
        "key": "ctrl+shift+d",
        "when": "editorTextFocus"
      }
      
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "^20.14.10",
    "@types/which": "^3.0.4",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "vscode": "^1.1.37"
  },
  "dependencies": {
    "json5": "^2.2.3"
  }
}
